<body>

    <div class="box">
        <h2>DIVISORA</h2>
        <input type="number" id="numero" placeholder="Ingrese un número">
        <button onclick="sumar()">Comprobar</button>
        <p id="resultado"></p>
    </div>
    <script>
        function sumar() {
            //Variable numerica 
            const n = Number(document.getElementById("numero").value);
            //Caja de texto
            const resultado = document.getElementById("resultado");
            if (n === 0 || isNaN(n)) {
                resultado.textContent = "Ingrese un número válido";
                return;
            }
            let texto = "";
//+= Acumula el resultado del texto ? : Es un if else reducido donde Aqui(if):Aca(else)
            texto += (n % 5 === 0) ? "Divisible por 5\n" : "No divisible por 5\n";
            texto += (n % 2 === 0) ? "Divisible por 2\n" : "No divisible por 2\n";
            texto += (n % 4 === 0) ? "Divisible por 4\n" : "No divisible por 4\n";

            resultado.textContent = texto;
        }
    </script>
</body>

